<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TouristApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.BookingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DisplayActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.PersonalAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CulturalEventAndHolidayActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ClothesAndJewelryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.FoodandDrinksActivity"
            android:exported="false" />
        <activity
            android:name=".ui.VactionSiteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.NaturalandHistoriicalActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SigninActivity"
            android:exported="false"
            android:theme="@style/Theme.TouristApp" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name" />
    </application>

</manifest>