<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="27sp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.VactionSiteActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:layout_marginLeft="20dp"
        android:text="Vacation Places"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/robotobold"
        android:textColor="#000000"
        android:id="@+id/logo_title"
        android:textStyle="bold"
        android:layout_centerVertical="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="310dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        android:layout_marginBottom="20dp"
        app:lottie_rawRes="@raw/vacation"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/hawassa"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="10sp"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/haile"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haile resourt"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:id="@+id/haileresort"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: Hawasa"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/kuriftu"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"


                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/kuriftu"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuriftu water park"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:id="@+id/kuriftu_txt"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: Debrezeyt"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/skyLight"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/skylite"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sky light hotel"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="28sp"
                    android:id="@+id/skyliteHotel"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: Addis Ababa"

                    android:layout_gravity="center"

                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/sheraton"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/sheraten"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sharaton Addis"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:id="@+id/sheraton_txt"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: Addis Ababa"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/paradise"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/paradise"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Paridise louge"
                    android:id="@+id/paradise_txt"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: Arbaminch"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>




</LinearLayout>

