<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="27sp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.NaturalandHistoriicalActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/axsum"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="10sp"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/axsumimage"
                    android:src="#9C000000"
                    />
                <TextView
                    android:id="@+id/aksum_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Axsum"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lalibela"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/lalibela"
                    android:src="#9C000000"
                    />
                <TextView
                    android:id="@+id/lalibla_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lalibela"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/sofumer"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/sofumer"
                    android:src="#9C000000"
                    />
                <TextView
                    android:id="@+id/sofumer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sofumer Cave"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/nechisar"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/nechisar"
                    android:src="#9C000000"
                    />
                <TextView
                    android:id="@+id/nechisar_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nechsar national park"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/harrar"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/harrar"
                    android:src="#9C000000"
                    />
                <TextView
                    android:id="@+id/harrar_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Harra city \nand Hara Gemb"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/tiya"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/tiyastone"
                    android:src="#9C000000"
                    />
                <TextView
                    android:id="@+id/tiya_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiya Stones"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>




</LinearLayout>

