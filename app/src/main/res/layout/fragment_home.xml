<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Roura"
                android:textSize="25sp"
                android:gravity="center"
                android:fontFamily="@font/lobseterregular"
                android:textColor="#000000"
                android:id="@+id/logo_title"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/logout"
                android:id="@+id/account"
                android:layout_alignParentEnd="true"
                app:tint="#7D7C7E"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_below="@+id/toolbar"
            android:id="@+id/scrollList"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/nh"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginLeft="24sp"
                    android:layout_marginRight="24sp"
                    android:layout_marginTop="10sp"
                    app:cardCornerRadius="10sp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lalibela"
                        android:src="#9C000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Natural and \nHistorical places"
                        android:layout_gravity="center"
                        android:id="@+id/natural_historical_sites"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/vacationSite"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginLeft="24sp"
                    android:layout_marginRight="24sp"
                    android:layout_marginTop="10sp"
                    app:cardCornerRadius="10sp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/kuriftu"
                        android:src="#9C000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Vacation places"
                        android:layout_gravity="center"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foods and Drinks"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="29dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontal1">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:background="#E0DFDF"
                        android:paddingBottom="20dp"
                        android:id="@+id/foodbutton">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/beyaynet"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"

                            android:layout_marginRight="15sp"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"

                            >
                            <ImageView
                                android:layout_width="143dp"
                                android:layout_height="150dp"
                                android:background="@drawable/beyanet"
                                android:src="#9C000000"
                                /> </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:id="@+id/firfir"
                            android:layout_marginRight="25sp"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"

                            >

                            <ImageView
                                android:layout_width="143dp"
                                android:layout_height="150dp"
                                android:background="@drawable/firfir"
                                android:src="#9C000000" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="25sp"
                            android:id="@+id/kitfo"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"

                            >
                            <ImageView
                                android:layout_width="143dp"
                                android:layout_height="150dp"
                                android:background="@drawable/kitfo"
                                android:src="#9C000000"
                                /> </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="25sp"
                            android:id="@+id/shiro"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"

                            >
                            <ImageView
                                android:layout_width="143dp"
                                android:layout_height="150dp"
                                android:background="@drawable/shiro"
                                android:src="#9C000000"
                                /> </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:id="@+id/bursame"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="25sp"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"

                            >
                            <ImageView
                                android:layout_width="143dp"
                                android:layout_height="150dp"
                                android:background="@drawable/bursame"
                                android:src="#9C000000"
                                /> </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginLeft="1sp"
                            android:id="@+id/dorowet"
                            android:layout_marginRight="25sp"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"

                            >
                            <ImageView
                                android:layout_width="143dp"
                                android:layout_height="150dp"
                                android:background="@drawable/dorowet"
                                android:src="#9C000000"
                                /> </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"

                        android:layout_marginLeft="25dp"
                        android:id="@+id/undeline">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clothes and Jewelry"
                            android:id="@+id/cat_title"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_below="@+id/cat_title"
                            android:background="@color/black"
                            android:layout_marginTop="6dp"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/undeline"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scrollbars="none" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toRightOf="@id/undeline"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/undeline2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events and Holyday"
                            android:id="@+id/cat_title2"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="6dp"
                            android:layout_below="@+id/cat_title2"
                            android:background="@color/black"

                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/recyclerView"
                        android:layout_marginBottom="10dp"

                        android:layout_below="@+id/undeline2"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scrollbars="none" />


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>