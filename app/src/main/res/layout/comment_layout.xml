<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:backgroundTint="#F6E6EAF4"
    android:gravity="center"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/userNameAndImage"
    android:gravity="center"
    android:paddingStart="20dp"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/person_icon"
        app:tint="#B388FF"

        android:id="@+id/accountImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="User Name"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#454545"
        android:id="@+id/userName"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/accountImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/time_icon"
        android:text="2 month"
        android:drawablePadding="3dp"
        android:drawableTint="#595757"
        android:textSize="9sp"
        android:textColor="#626262"
        android:id="@+id/date"
        android:paddingRight="10dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"

        />
</RelativeLayout>

    <TextView

        android:id="@+id/commentSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameAndImage"
        android:layout_marginTop="-5dp"

        android:paddingLeft="55dp"
        android:paddingTop="2dp"
        android:text="Whta a wonderfull experiance"
        android:textColor="#E2232020"
        android:textSize="11dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentSection"
        android:text="User Name"
        android:textSize="10sp"
        android:textColor="#454545"
        android:id="@+id/commenter_location"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5sp"
        android:background="@color/black"
        android:layout_below="@+id/commenter_location"
        />



</RelativeLayout>