<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="27sp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.ClothesAndJewelryActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/sidam_cultural"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"


                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/sidama"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:id="@+id/sidama_culture_txt"
                    android:textStyle="bold"
                    android:text="sidama cultural clothes\nand jewelry"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/oromo_cultural"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="10sp"


                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/oromia"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Oromo cultural clothes\nand jewelry "
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/oromo_culture_txt"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/amara_cultual"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/amhara"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Amhara cultural clothes \nand jewelry"
                    android:layout_gravity="center"
                    android:id="@+id/amhara_culture_txt"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/somale_cultual"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="27sp"
                android:layout_marginRight="27sp"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="15sp"
                android:background="#592D2D"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/somale"
                    android:src="#9C000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Somale cultural clothes\nand jewelry"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/somale_culture_txt"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>




</LinearLayout>

